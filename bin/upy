#!/usr/bin/env node

var colors = require('colors'),
    argv   = require('optimist').argv,
    upy    = require('../');

if (argv.h || argv.help) {
  console.log([
    'usage: upy [options]',
    '',
    'options:',
    'days         Show uptime in days',
    'hours        Show uptime in hours',
    'minutes      Show uptime in minutes',
    'seconds      Show uptime in seconds',
    'timestamp    Show uptime in timestamp',
    '  -h --help  Show this help and exit'
  ].join('\n'));
  process.exit();
}

if (argv._[0] === 'days') {
  var u = upy.days();
  console.log('%s %s uptime'.green, u, u > 1 ? 'days' : 'day');
} else if (argv._[0] === 'hours') {
  var u = upy.hours();
  console.log('%s %s uptime'.green, u, u > 1 ? 'hours' : 'hour');
} else if (argv._[0] === 'minutes') {
  var u = upy.minutes();
  console.log('%s %s uptime'.green, u, u > 1 ? 'minutes' : 'minute');
} else if (argv._[0] === 'seconds') {
  var u = upy.seconds();
  console.log('%s %s uptime'.green, u, u > 1 ? 'seconds' : 'second');
} else if (argv._[0] === 'timestamp') {
  console.log(upy.timestamp().toString().green);
} else {
  console.log(upy.uptime().green);
}
